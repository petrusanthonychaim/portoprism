        }
        .m {
            font-size: small;
        }
        .l {
            font-size: medium;
        }
        .xl {
            font-size: xx-large;
        }
    </style>
</head>
<body>
<br>

<!-- <%= JSON.stringify(id)  %> -->

    <form action="/stocks/add/<%= id %>"  method="post">
        <label for="code">Stock Code :</label> <br>
        <input type="text" name="code" id="code"> <br> 

        <label for="stockName"> Stock Name :</label> <br>
        <input type="text" name="stockName" id="stockName"> <br>

        <label for="price">Price :</label> <br>
        <input type="number" name="price" id="price"> <br> 

        <label for="shares">Shares :</label> <br>
        <input type="text" name="shares" id="shares"> <br>
        <br>
        <select name="SectorId" id="SectorId">
            <option value="" selected disabled>Choose Sector</option>
            <% sectors.forEach(el => { %>
                <option value="<%= el.id %>"><%= el.sectorName %></option>
            <% }) %>
        </select>
        <br>
        <br>
        <button type="submit">
            Add
        </button>
        <br>
        <br>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>